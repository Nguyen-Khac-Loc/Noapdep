extends _layout

block content
    main.main
        .card-container
            each tour in tours
                .card
                    a(href=`/tour/${tour.slug}`, style='text-decoration: none;color: inherit;')
                        .card__header
                            .card__picture
                                .card__picture-overlay &nbsp;
                                img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                            h3.heading-tertirary
                                span= tour.name

                        .card__details
                            h4.card__sub-heading= `${tour.duration} ngày`
                            p.card__text= tour.summary                            
                            .card__data
                                svg.card__icon
                                    use(xlink:href='img/icons.svg#icon-calendar')
                                span= tour.startDates.toLocaleString('vi-VN',{month:'numeric',year:'numeric'})
                            .card__data
                                svg.card__icon
                                    use(xlink:href='img/icons.svg#icon-flag')
                                span= `${tour.locations.length} địa điểm`                            

                        .card__footer
                            p
                                span.card__footer-value= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(tour.price)                                
                            p.card__ratings
                                span.card__footer-value= tour.ratingsAverage
                                span.star-icon ★
                                span.card__footer-text= `(${tour.ratingsQuantity})`
                            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Chi tiết